@{
    ViewData["Title"] = "Recuperar Conta";
}

<div class="container">
    <div>
        <a class="btn btn-danger" asp-controller="Acesso" asp-action="Login">Voltar</a>
    </div>
    <div class="card card-login">
        <div class="card-header">
            <h1>Recupere sua conta</h1>
        </div>
        <div class="card-body">
            <form asp-controller="Acesso" asp-action="Login" method="post">
                <div class="form-group">
                    <label class="control-label" for="email">Digite seu email para iniciar a recuperação de conta:</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="Email de recuperação de conta" required/>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>