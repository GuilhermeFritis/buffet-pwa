<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/layout-interno.css"/>
    @RenderSection("Styles", required: false)
</head>
<body>

<div class="container-fluid">
    <div class="row">
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container" id="menu">
                    <a class="navbar-brand" asp-area="" asp-controller="PainelDoUsuario" asp-action="PainelDoUsuario"><img class="logo" src="~/logo.png" height="30px"/></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PainelDoUsuario" asp-action="PainelDoUsuario">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Ajuda" asp-action="Ajuda">Ajuda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Acesso" asp-action="Login">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">@ViewData["Title"]</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    @RenderSection("Toolbar", required:false)
                </div>      
            </div>
            
            @RenderBody()
        </main>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Atividade1 - <a asp-area="" asp-controller="InformacoesLegais" asp-action="PoliticaDePrivacidade">Políticas de Privacidade</a> - <a asp-area="" asp-controller="InformacoesLegais" asp-action="TermosDeUso">Termos de Uso</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/layout-externo.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>